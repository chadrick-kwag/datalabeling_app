<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="@dimen/usermain_thumb_square_size"
  android:layout_height="@dimen/usermain_thumb_square_size"


  >

  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <ImageView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:id="@+id/thumbnailimageview"
      android:layout_gravity="center"
      android:scaleType="centerCrop"
      />
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/thumbnailTitle"
      android:layout_gravity="center"
      android:textAlignment="center"
      android:background="@color/usermain_thumbnail_tv_background"
      android:textColor="@color/usermain_thumbnail_tv_textcolor"
      />

  </FrameLayout>

</RelativeLayout>