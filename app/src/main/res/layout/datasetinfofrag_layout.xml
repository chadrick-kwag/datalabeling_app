<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent" android:layout_height="match_parent"
                android:background="@android:color/white">
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="30dp"
      android:id="@+id/dstitle"
  />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/progresspercentage"
      android:layout_below="@+id/dstitle"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="20dp"
      android:textSize="30dp"
  />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/progresspercentage"
      android:layout_margin="10dp"
      android:id="@+id/total_textview"
  />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/total_textview"
      android:layout_margin="10dp"
      android:id="@+id/done_textview"
  />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="100dp"
      android:layout_alignParentBottom="true"
      android:orientation="horizontal"
  >
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/dsprogressfrag_btn_disable_color"
        android:id="@+id/upload_click_area"
        android:gravity="center"
    >

      <ImageView android:layout_width="200px"
                 android:layout_height="200px"
                 android:id="@+id/uploadImageview"
                 android:background="@drawable/ic_file_upload_black_48dp"
                 android:layout_gravity="center"
                 android:clickable="false"
      />

      <ProgressBar
          style="?android:attr/progressBarStyle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/uploadprogressbar"
          android:layout_gravity="center"
          android:visibility="invisible"
          android:clickable="false"
      />
    </FrameLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/continue_area"
        android:background="@drawable/continue_area_selector"

    >
      <ImageView
          android:layout_width="200px"
          android:layout_height="200px"
          android:id="@+id/continueImageView"
          android:background="@drawable/ic_navigate_next_black_48dp"
          android:layout_gravity="center"
          android:clickable="false"
      />

    </FrameLayout>

  </LinearLayout>


</RelativeLayout>